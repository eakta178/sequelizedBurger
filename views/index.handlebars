<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center" id="top-bar">
      <img src="/assets/img/burger.jpg" class="img-fluid" alt="Responsive image">
    </div>
    <div class="col-xs-12 text-center" id="top-bar">
      <h1>Eat-Da-Burgers!</h1>
    </div>
    <div class="col-xs-6 text-center task">
      <div class="row">
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col-xs-9 text-center">
          <pre>{{this.id}}.{{this.burger_name}}</pre>
        </div>
        <div class="col-xs-2 text-center">
          <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="burger_id" type="text"
            value={{this.id}}>
            <button type="submit" class="btn btn-success">
              DEVOUR IT!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-xs-offset-2 col-xs-3 text-center task">
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class="form-control" type="text" 
          placeholder="{{this.id}}.{{this.burger_name}}" readonly>
          <br>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_selection">
    <div class="col-xs-offset-4 col-xs-4 ">
        <form action="/burgers/create" method="POST">
          <input type="text" name="burger_name" class="form-control"
          value="" id="enter_text">
          <br>
          <button type="submit" class="btn btn-primary"
          id="text-enter-button">SUBMIT</button>

         
      </form>
    </div>
    <div class="col-xs-offset-3 col-xs-6">
         <p>Enter the burger you want to eat.Click the 'Submit' button!</p>
    </div>
      

  </div>
</div>
</div>
